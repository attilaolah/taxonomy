.page-wrapper.document-page
  header.top-navigation
    .container
      .theme-switcher-menu
        button.button.action.has-icon.small.light-mode type="button"
          .material-symbols-outlined.right light_mode
        button.button.action.has-icon.small.dark-mode type="button"
          .material-symbols-outlined.right dark_mode

  .article-actions-container
    .container
  .article-wrapper
    .toc
      aside.document-toc-container
        section.document-toc
          header
            h2.document-toc-heading Tartalom
          ul#toc-entries.document-toc-list
    main.main-content role="main"
      article.main-page-content
        #content

          h1 Élőlények, magyarul.
          ' A
          a> href="https://jasen.org.rs/hu" Kőris Környezetvédelmi Alapítvány
